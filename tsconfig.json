{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "typeRoots": ["typings", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@imgs": ["src/static/imgs"],
      "@imgs/*": ["src/static/imgs/*"],
      "@css": ["src/static/css"],
      "@utils": ["src/utils"],
      "@layout": ["src/layout"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "webpack.config.js", "gulpfile.js"]
}